# [include]
#   path = ~/.gitconfig.local
  
[user]
	name = Callum Flack
	email = callumflack@gmail.com

[alias]
  aa = add .
  br = branch
  co = checkout
  cp = cherry-pick
  cm = commit -a
  lg = vlog --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  pl = pull
  pu = push
  st = status
  
[color]
  ui = true
    [color "branch"]
      current = yellow reverse
      local = yellow
      remote = green
    [color "diff"]
      meta = yellow bold
      frag = magenta bold # line info
      old = red # deletions
      new = green # additions
    [color "status"]
      added = yellow
      changed = green
      untracked = cyan

[commit]
  template = ~/.dotfiles/git/template
  
[core]
	excludesfile = /Users/sticktoitiveness/.gitignore_global
  quotepath = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = atom --wait

[diff]
   compactionHeuristic = true

[difftool]
  prompt = false

[push]
  default = simple

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
